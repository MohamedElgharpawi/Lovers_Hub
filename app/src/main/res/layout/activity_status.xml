<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:background="@drawable/bkg"

    >

    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/close"
        android:clickable="true"
        android:layout_margin="10sp"
        android:background="@drawable/bkg"


        />



    <TextView
        android:id="@+id/StatusTv"
        android:layout_below="@id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Status Settings"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/tv_shape"
        android:padding="30sp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"

        />

    <LinearLayout
        android:id="@+id/linear_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/StatusTv"
        android:layout_marginTop="79dp"
        android:orientation="vertical"


        >


        <EditText
            android:id="@+id/Status_Et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5sp"
            android:drawableLeft="@drawable/mood"
            android:drawablePadding="10dp"
            android:hint="your status"
            android:textColor="@color/white"
            android:textSize="35sp" />


    </LinearLayout>
   <Button
       android:id="@+id/SaveStatus_btn"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:layout_below="@id/linear_lay"
       android:layout_marginTop="50sp"
      android:layout_centerHorizontal="true"
       android:background="@color/white"
       android:textColor="@color/black"
       android:text="Save"
       android:textSize="30sp"
       android:textStyle="bold"
       android:textAllCaps="false"
       android:drawableStart="@drawable/save"

       />





</RelativeLayout>