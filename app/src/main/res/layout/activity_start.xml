<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    tools:context=".StartActivity">
<ImageView
    android:id="@+id/img"
    android:layout_width="200dp"
    android:layout_height="200dp"
android:layout_centerHorizontal="true"
app:srcCompat="@drawable/ic_chat_black_24dp"
    />
    <TextView
        android:id="@+id/lover_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOVERS"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
android:textSize="40sp"
        android:textStyle="italic"
        android:textColor="@color/white"


        />
    <TextView
        android:id="@+id/hub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUB"
        android:layout_below="@id/lover_tv"
android:layout_toEndOf="@id/lover_tv"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"


        />


    <Button
        android:id="@+id/Create_new_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@drawable/shape_btn"
        android:layout_below="@id/hub_tv"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="Create new Account"
        android:textAllCaps="false"
        android:padding="1dp"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/AlreadyHasAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Create_new_Button"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="25sp"
android:text="Already Has an Account ?"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:clickable="true"

        />



</RelativeLayout>